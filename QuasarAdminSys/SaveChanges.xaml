<UserControl
    x:Class="QuasarAdminSys.SaveChanges"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuasarAdminSys"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="400"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="Message"
            Grid.Row="0"
            Margin="0,6,0,0"
            FontSize="18"
            Text="Aun no ha guardado los cambios. ¿Desea cambiar de usuario?"
            TextWrapping="Wrap" />
        <Button
            Grid.Row="1"
            Margin="16,16,120,0"
            HorizontalAlignment="Right"
            Click="accept"
            IsDefault="True"
            Style="{DynamicResource MaterialDesignFlatButton}">
            ACEPTAR
        </Button>
        <Button
            Grid.Row="1"
            Margin="16,16,16,0"
            HorizontalAlignment="Right"
            Click="cancel"
            IsDefault="True"
            Style="{DynamicResource MaterialDesignFlatButton}">
            CANCELAR
        </Button>
    </Grid>
</UserControl>
